<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f3f4"
    tools:context="com.example.alumno.hewi_mobile.RegistroUsuario.registro_usuario">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardPresentacion"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#f39c12"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImagenPrincipal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/registro_usuario"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImagenPrincipal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="H E W I"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:text="Registro de usuarios"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="NOMBRE"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/NomUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:theme="@style/EditDos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="APELLIDO PATERNO"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/AppUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:theme="@style/EditDos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="APELLIDO MATERNO"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ApmUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:theme="@style/EditDos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="CURP"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CurpUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="text"
                android:singleLine="true"
                android:theme="@style/EditDos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="NOMBRE DE USUARIO"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/NombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="text"
                android:singleLine="true"
                android:theme="@style/EditDos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="INGRESE SU CONTRASEÑA"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PassUno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:theme="@style/EditDos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@drawable/titulos"
                android:layout_marginHorizontal="5dp"
                android:padding="4dp"
                android:text="INGRESE NUEVAMENTE SU CONTRASEÑA"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PassDos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginHorizontal="5dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:theme="@style/EditDos"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/propiedades_boton2"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/plus_opt"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text=" REGISTRARME "
                android:onClick="RegistrarUsuario"
                android:elevation="10dp"
                android:layout_marginVertical="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
