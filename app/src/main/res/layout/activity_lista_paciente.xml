<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alumno.hewi_mobile.Pacientes.ConsultaPaciente.lista_paciente">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardConsulta"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#16a085"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImagenPrincipalUno"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/search"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImagenPrincipalUno"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="CONSULTA"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:text="Consulta y elimina la informaciÃ³n de tus pacientes en HEWI mobile."
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <ListView
                android:id="@+id/ListaPacientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


    </LinearLayout>

</LinearLayout>
