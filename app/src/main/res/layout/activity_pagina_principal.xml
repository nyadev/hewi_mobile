<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alumno.hewi_mobile.pagina_principal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- CardView correspondiente a PRESENTACIÓN -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardPresentacion"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#48C9B0"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">
       
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/ImagenPrincipal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ImagenPrincipal"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="HEWI"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <!-- CardView correspondiente REGISTRO DE CITAS -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardRegistro"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Citas"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="#f39c12"
        card_view:contentPadding="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ImagenUno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/registrocitas" />

            <TextView
                android:id="@+id/AccionUno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ImagenUno"
                android:text="CITAS"
                android:textColor="#FDFEFE"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AccionUno"
                android:layout_toRightOf="@+id/ImagenUno"
                android:text="Realiza diferentes acciones con
tus citas actuales" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <!-- CardView correspondiente a CONSULTA DE CITAS -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardConsulta"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#e67e22"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ImagenDos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/consulta_citas" />

            <TextView
                android:id="@+id/AccionDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ImagenDos"
                android:text="EXPEDIENTES"
                android:textColor="#FDFEFE"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AccionDos"
                android:layout_toRightOf="@+id/ImagenDos"
                android:text="Consulta los expedientes de tus clientes" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <!-- CardView correspondiente a CERRAR SESIÓN -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardCerrarSesion"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#d35400"
        android:onClick="CerrarSesion">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ImagenTres"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/cerrar_sesion" />

            <TextView
                android:id="@+id/AccionTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ImagenTres"
                android:layout_marginTop="9dp"
                android:text="CERRAR SESIÓN"
                android:textColor="#FDFEFE"
                android:textSize="25sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

</ScrollView>