<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alumno.hewi_mobile.citas"
    android:orientation="vertical">

<!---->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!---->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f39c12">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/registrocitas"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=" CITAS"
                    android:textSize="30dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>


            <TabHost
                android:id="@+id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!--TAB UNO-->
                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eb984e"
                                android:textColor="#ffffff"
                                android:textSize="20dp"
                                android:text="CURP DEL PACIENTE" />

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardBackgroundColor="#ecf0f1 "
                                card_view:cardCornerRadius="3dp"
                                card_view:contentPadding="4dp"
                                card_view:cardElevation="4dp"
                                card_view:cardUseCompatPadding="true">

                            <EditText
                                android:id="@+id/editText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="CURP"
                                android:inputType="textPersonName" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eb984e"
                                android:textColor="#ffffff"
                                android:textSize="20dp"
                                android:text="¿QUÉ DÍA DESEAS LLEVAR A CABO LA CITA?" />

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardBackgroundColor="#ecf0f1 "
                                card_view:cardCornerRadius="3dp"
                                card_view:contentPadding="4dp"
                                card_view:cardElevation="4dp"
                                card_view:cardUseCompatPadding="true">

                            <DatePicker
                                android:id="@+id/datePicker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eb984e"
                                android:textColor="#ffffff"
                                android:textSize="20dp"
                                android:text="¿A QUÉ HORA?" />

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                card_view:cardBackgroundColor="#ecf0f1"
                                card_view:cardCornerRadius="3dp"
                                card_view:contentPadding="4dp"
                                card_view:cardElevation="4dp"
                                card_view:cardUseCompatPadding="true">

                            <TimePicker
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            </android.support.v7.widget.CardView>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/right"/>

                        </LinearLayout>


                        <!--TAB DOS-->
                        <LinearLayout
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                        </LinearLayout>

                        <!--TAB TRES-->
                        <LinearLayout
                            android:id="@+id/tab3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </TabHost>

            <!---->
        </LinearLayout>
    </ScrollView>
<!---->
</LinearLayout>
